<% include header %>
<div class="app content-area">
    <% include sidebar %>
    <div class="main-content">
        <div class="container-fluid">
          <ol class="breadcrumb">
            <li><a href="#">Accounts Management System</a></li>
            <li class="active">Create Voucher</li>
          </ol>
          <div class="row print-actions">
            <div class="col-sm-4">
              <h3>Create Voucher</h3>
            </div>
            <div class="col-sm-8 text-right">
              <form class="form-inline">
                <fieldset disabled>
                  <div class="form-group">
                    <label>Select Voucher</label>
                    <select class="form-control input-sm">
                      <option>Back Payment</option>
                      <option>Cash Payment</option>
                    </select>
                  </div>
                  <button type="button" class="btn btn-normal btn-sm"><i class="fa fa-print" aria-hidden="true"></i><span>Print</span></button>
                  <button type="button" class="btn btn-normal btn-sm"><i class="fa fa-share-square-o" aria-hidden="true"></i></button>
                  <button type="button" class="btn btn-normal btn-sm"><i class="fa fa-floppy-o" aria-hidden="true"></i></button>
                </fieldset>
              </form>
            </div>
          </div>
          <div class="voucher-layout">
          <div class="table-responsive">
          	<table class="table-bordered" width="100%" border="0" cellpadding="0" cellspacing="0">
            <tr>
            	<td>
                <table class="table inner-table table-bordered">
                	<tr>
                    	<td colspan="9" align="center"><img src="http://localhost:3000/images/voucher-logo.png" /></td>
                    </tr>
                    <tr>
                    	<td colspan="9" align="center"><strong>Bank Receipt Voucher</strong></td>
                    </tr>
                    <tr>
                    	<td width="18%"><strong>Cheque#:</strong></td>
                        <td colspan="3">&nbsp;</td>
                        <td width="10%">&nbsp;</td>
                        <td width="12%">&nbsp;</td>
                        <td width="10%">&nbsp;</td>
                        <td width="8%">&nbsp;</td>
                        <td width="10%">&nbsp;</td>
                    </tr>
                    <tr>
                    	<td><strong>BRV#:</strong></td>
                        <td width="12%">&nbsp;</td>
                        <td width="10%">&nbsp;</td>
                        <td width="10%">&nbsp;</td>
                        <td>&nbsp;</td>
                        <td>&nbsp;</td>
                        <td><strong>Date:</strong></td>
                        <td colspan="2">&nbsp;</td>
                    </tr>
                    <tr>
                    	<td width="18%"><strong>Paid to:</strong></td>
                        <td colspan="8" class="border-black text-center"><%= vouchers[0].name %></td>
                    </tr>
                </table>
                </td>
            </tr>
            <tr>
            	<td>
                	<table class="table-bordered table thin-border" width="100%" cellpadding="0" cellspacing="0">
                        <tr>
                            <th width="11%" align="center">Invoice#</th>
                            <th width="17%" align="center">Dated</th>
                            <th width="54%" align="center">Description</th>
                            <th width="18%" align="center" class="text-center">Amount(Rs)</th>
                        </tr>
                        <% vouchers.forEach(function(voucher) { %>
                            <tr>
                                <td><%= voucher.id %></td>
                                <td><%= voucher.date %></td>
                                <td><%= voucher.memo %></td>
                                <td align="center"><%= voucher.debit %></td>
                            </tr>
                        <% }); %>

                        <tr>
                          <td colspan="3" align="center">TOTAL</td>
                            <td align="center"><%= "Rs: "+total+"/-" %></td>
                        </tr>

                    </table>
                </td>
            </tr>
            <tr>
            	<td>
                	<table class="table-bordered table thin-border" width="100%" cellpadding="0" cellspacing="0">
                        <tr>
                            <th width="25%" colspan="4">Account Code</th>
                            <th width="46%" align="center">Account Title</th>
                            <th width="15%" align="center">Debit(Rs)</th>
                            <th width="14%" align="center">Credit(Rs)</th>
                        </tr>
                        <tr>
                            <td>&nbsp;</td>
                            <td>&nbsp;</td>
                            <td>&nbsp;</td>
                            <td>&nbsp;</td>
                            <td>&nbsp;</td>
                            <td>&nbsp;</td>
                            <td>&nbsp;</td>
                        </tr>
                        <tr>
                            <td>&nbsp;</td>
                            <td>&nbsp;</td>
                            <td>&nbsp;</td>
                            <td>&nbsp;</td>
                            <td>&nbsp;</td>
                            <td>&nbsp;</td>
                            <td>&nbsp;</td>
                        </tr>
                        <tr>
                            <td>&nbsp;</td>
                            <td>&nbsp;</td>
                            <td>&nbsp;</td>
                            <td>&nbsp;</td>
                            <td>&nbsp;</td>
                            <td>&nbsp;</td>
                            <td>&nbsp;</td>
                        </tr>
                        <tr>
                            <td colspan="5" align="center">TOTAL</td>
                            <td>&nbsp;</td>
                            <td>&nbsp;</td>
                        </tr>
                    </table>
                </td>
            </tr>
            <tr>
            	<td>
                	<table class="table inner-table table-bordered">
                	<tr>
                    	<td colspan="2">Amount in Words:</td>
                        <td colspan="7" class="border-black">&nbsp;</td>
                    </tr>
                        <tr>
                            <td width="18%" class="border-black"><p>&nbsp;</p>
                            <p>&nbsp;</p>
                            <p>&nbsp;</p></td>
                            <td width="6%" rowspan="2">&nbsp;</td>
                            <td width="21%" class="border-black"><p>&nbsp;</p>
                            <p>&nbsp;</p>
                            <p>&nbsp;</p>
                            <p>&nbsp;</p></td>
                            <td width="5%" rowspan="2">&nbsp;</td>
                            <td width="21%" class="border-black">&nbsp;</td>
                            <td width="4%" rowspan="2">&nbsp;</td>
                            <td width="21%" class="border-black">&nbsp;</td>
                            <td width="4%" rowspan="2">&nbsp;</td>
                        </tr>
                        <tr>
                            <td align="center">Prepared by</td>
                            <td align="center">Checked by</td>
                            <td align="center">Approved by</td>
                            <td align="center">Received by</td>
                        </tr>
                </table>
                </td>
            </tr>
            </table>
          </div>
          </div>
          <div class="voucher-footer text-right">
            <button type="button" class="btn btn-normal">update</button>
          </div>
        </div>
      </div>

</div>
<% include footer %>